{
	"semi": true,
	"singleAttributePerLine": true,
	"bracketSameLine": true,
	"trailingComma": "all",
	"singleQuote": true,
	"jsxSingleQuote": true,
	"printWidth": 120,
	"tabWidth": 2,
	"plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-astro"],
	"overrides": [
		{
			"files": "*.astro",
			"options": {
				"parser": "astro"
			}
		}
	]
}
